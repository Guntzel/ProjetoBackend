@model UsuarioEdicaoViewModel
@{
    ViewData["Title"] = "Editar Documento";
}

<h1>Editar</h1>

<form asp-action="Editar" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div>
        <label for="Nome">Nome</label>
        <input asp-for="Nome" maxlength="100" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div>
        <label for="Email">E-mail</label>
        <input asp-for="Email" maxlength="200" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label for="Senha">Senha (deixe em branco para n√£o alterar)</label>
        <input asp-for="Senha" type="password" maxlength="100" value="" autocomplete="new-password" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <div>
        <label for="Arquivo">Nova Imagem (opcional)</label>
        <input type="file" name="Arquivo" />
        <span class="text-danger">
            @ViewData.ModelState["Arquivo"]?.Errors.FirstOrDefault()?.ErrorMessage
        </span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>