<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoBackend</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.12.1/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
      
        <nav class="cabecalho">
         <i class="bi bi-list menu-button"></i>
          <span>LOGO</span>
        </nav>
    </header>
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
      }
    <aside id="aside" class="collapsed">
      <ul class="sidebar-nav p-0">
        <li class="sidebar-item">
          @{
              var homeActive = (currentController == "Home" && currentAction == "Index") ? "active" : "";
          }
          <a href="@Url.Action("Index", "Home")" class="sidebar-link @homeActive">
            <span>Home</span>
            <i class="bi bi-house"></i>
          </a>
        </li>
        <li class="sidebar-item">
          @{
              var UserActive = (currentController == "Usuario" && currentAction == "Index") ? "active" : "";
          }
          <a href="@Url.Action("Index", "Usuario")" class="sidebar-link @UserActive">
            <span>Usuarios</span>
            <i class="bi bi-file-earmark"></i>
          </a>
        </li>
        <li class="sidebar-item">
          @{
              var sobreActive = (currentController == "Home" && currentAction == "Privacy") ? "active" : "";
          }
          <a class="sidebar-link" data-bs-toggle="modal" data-bs-target="#staticBackdrop" @sobreActive">
            <span>Sobre</span>
            <i class="bi bi-info-circle"></i>
          </a>
        </li>
      </ul>
    </aside>
  </div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Sobre</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h1>LOGO</h1>
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Itaque earum tempora perferendis reprehenderit aperiam quaerat dignissimos odio dolorem, cum officia, doloribus tempore aliquam dolorum amet beatae id magni saepe corporis.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Understood</button>
      </div>
    </div>
  </div>
</div>






    
        <main role="main">
            @RenderBody()
        </main>
    
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.min.js" integrity="sha384-RuyvpeZCxMJCqVUGFI0Do1mQrods/hhxYlcVfGPOfQtPJh0JCw12tUAZ/Mv10S7D" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
